<?xml version="1.0"?>

<launch>

   <arg name = "frequency" default = "2" />

   <arg
	name = "rosbagEnable"
	default = "true"
   />

   <node
	pkg = "beginner_tutorials"
	type = "publisher"
	name = "talker"
	output = "screen"
        args = "$(arg frequency)"
   />

   <node
	pkg = "beginner_tutorials"
	type = "subscriber"
	name = "listener"
	output = "screen"
   />

   <node 
        pkg = "rosbag"
	type = "record"
	name = "ros_record"
        args = "record --duration=15 -a -O $(find beginner_tutorials)/results/recordedbag"
	if = "$(arg rosbagEnable)"
   />

</launch>
